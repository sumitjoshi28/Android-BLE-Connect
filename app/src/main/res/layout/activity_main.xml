<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:background="@color/text_dark_primary"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sumit.bleConnection.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="BLE Devices"
        android:textColor="@color/ctek_white"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Scan"
        android:textSize="15sp"
        android:textColor="@color/ctek_white"
        android:background="@drawable/button_shape"
        android:id="@+id/StartScanButton"
        android:layout_marginTop="40dp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Stop Scanning"
        android:background="@drawable/button_shape"
        android:textColor="@color/ctek_white"
        android:textSize="15sp"
        android:id="@+id/StopScanButton"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="80dp"
        android:id="@+id/PeripheralTextView"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:background="@drawable/shape_image"
        android:backgroundTint="@color/light_gray_stroke"
        android:scrollbars="vertical"
        android:maxLines="100" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Level"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:textColor="@color/ctek_white"
        android:background="@drawable/button_shape"
        android:layout_below="@+id/PeripheralTextView"
        android:layout_marginStart="10dp"
        android:id="@+id/battery_level" />


</RelativeLayout>
